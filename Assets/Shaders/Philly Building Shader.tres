uniform float alpha_shit;

void fragment() {
	vec4 color = texture(TEXTURE, UV);
	
	if (color.a > 0.0)
		color -= alpha_shit;
	
	// cuz flixel shaders work differently or some shit ig
	color.rgb = clamp(color.rgb, vec3(0, 0, 0), vec3(1, 1, 1));
	
	COLOR = color;
}

